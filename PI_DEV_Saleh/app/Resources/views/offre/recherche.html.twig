
{% extends 'base.html.twig' %}


{% block container %}

    <form method="POST" class="form-inline" align="center"  >
        <br><br>
        Name:
        <div class="form-group">
            <input type="text" name="nom" class="form-control" placeholder="Donner un nom" aria-label="Donner un nom" aria-describedby="basic-addon2" width="200px"><br>
        </div>
        <div class="form-group">
Job Done:
            <SELECT name="travailfait" class="form-control" size="1">
                <OPTION>1
                <OPTION>2
                <OPTION>3
                <OPTION>4
                <OPTION>5
                <OPTION>6
                <OPTION>7
                <OPTION>8
                <OPTION>9
                <OPTION>10
            </SELECT>
        </div>
        <div class="form-group">
                <input type="submit" value="Rechercher" name="recherche" class="btn btn-outline-secondary" >

            </div>
        </div>
    </form>





    <section class="featured-users">
        <div class="container">
            <div class="section-title" style="padding-top: 20px;">
                <h1>Freelancers</h1>
            </div>


            <div class="row">
                <div class="col-lg-9">
                    <div class="row">

                        {% for offre in offres %}
                            {% if offre.travailfait >5 %}

                                <div class="col-md-4">
                                    <div class="card-box text-center">
                                        <div class="most-popular">
                                            <span>Feautured</span>
                                        </div>
                                        <div class="clearfix"></div>
                                        <div class="member-card">
                                            <div class="member-thumb">
                                                <a href="{{ path('offre_show', { 'id': offre.id }) }}"><img src="assets/img/users/1.jpg" class="img-circle img-thumbnail" alt="profile-image"></a>
                                                <i class="fa fa-star member-star text-success" title="verified user"></i>
                                            </div>

                                            <div class="small-line-height">
                                                <h4><a href="company.html">{{ offre.nom }}</a></h4>
                                                <p class="text-muted p-location"><i class="fa fa-map-marker"></i>{{ offre.lieu }}</p>
                                                <p class="p-star">
                                                    <i class="fa fa-star rating-star"></i>
                                                    <i class="fa fa-star rating-star"></i>
                                                    <i class="fa fa-star rating-star"></i>
                                                    <i class="fa fa-star rating-star"></i>
                                                    <i class="fa fa-star rating-star"></i>
                                                    {{ offre.rating }}
                                                </p>
                                            </div>

                                            <h5>{{ offre.diplome }}</h5>
                                            <h6>{{ offre.type }}</h6>
                                            <p class="text-muted font-16">
                                                {{ offre.description }}.
                                            </p>

                                        </div>

                                        <div class="row">
                                            <div class="col-sm-6">
                                                <h6><br>{{ offre.travailfait }}</h6>
                                                <p class="bottom">Jobs Done</p>
                                            </div>
                                            <div class="col-sm-6">
                                                <h6>{{ offre.heurest }}</h6>
                                                <p class="bottom">Hours Worked</p>
                                            </div>

                                        </div>

                                    </div>
                                </div> <!-- col-md-4 -->
                            {% else %}

                                <div class="col-md-4">
                                    <div class="card-box text-center">
                                        <div class="clearfix"></div>
                                        <div class="member-card">
                                            <div class="member-thumb">
                                                <a href="#"><img src="assets/img/users/4.jpg" class="img-circle img-thumbnail" alt="profile-image"></a>
                                            </div>

                                            <div>
                                                <h4><a href="#">{{ offre.nom }}</a></h4>
                                                <p class="text-muted p-location"><i class="fa fa-map-marker"></i>{{ offre.lieu }}</p>
                                                <p class="p-star">
                                                    <i class="fa fa-star rating-star"></i>
                                                    <i class="fa fa-star rating-star"></i>
                                                    <i class="fa fa-star rating-star"></i>
                                                    <i class="fa fa-star rating-star"></i>
                                                    <i class="fa fa-star rating-star"></i>
                                                    {{ offre.rating }}
                                                </p>
                                            </div>

                                            <h5>{{ offre.diplome }}</h5>
                                            <p class="text-muted font-16">
                                                {{ offre.description }}.
                                            </p>

                                        </div>

                                        <div class="row">
                                            <div class="col-sm-6">
                                                <h6><br>{{ offre.travailfait }}</h6>
                                                <p class="bottom">Jobs Done</p>
                                            </div>
                                            <div class="col-sm-6">
                                                <h6>{{ offre.heurest }}</h6>
                                                <p class="bottom">Hours Worked</p>
                                            </div>
                                        </div>

                                    </div>
                                </div> <!-- col-md-4 -->






                            {% endif %}

                        {% endfor %}

                        <div class="paginationCommon blogPagination text-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">

                                </ul>
                            </nav>
                        </div>


                    </div><!-- row -->
                    <div class="row">




                    </div><!-- row -->
                </div><!-- col-md-9 -->

                <div class="col-sm-4 col-md-3">

                    <div class="widget">
                        <h3 class="widget_title">Category</h3>
                        <ul class="tr-list">
                            <li><a href="{{ path('offre_liste_recherche_categorie1') }}" class="active"><i class="fa fa-code"></i> Web & Mobile Development</a></li>
                            <li><a href="{{ path('offre_liste_recherche_categorie2') }}"><i class="fa fa-eye"></i>  Design, Arts & Multimedia</a></li>
