{% extends 'dashboard_Base.html.twig' %}

{% block container %}

    {% form_theme edit_form 'bootstrap_4_layout.html.twig' %}

<div class="col-sm-8 col-md-9">

    <div class="job-box">
        <div class="job-header">
            <h4>Job Edit</h4>
        </div>
        <form id="addForm">
            <div class="=form-group">

              {{ form_start(edit_form) }}
              {{ form_widget(edit_form) }}
               <input type="submit" value="Edit" class="kafe-btn kafe-btn-mint-small full-width"/>
              {{ form_end(edit_form) }}
            </div>
        </form>

<br>
            <a class="btn btn-default" href="{{ path('d__jobs__posted') }}">Back to the list</a>
      <div align="right">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
      </div>
    </div>
</div>
{% endblock %}
