{% extends "dashboard_Base.html.twig" %}

{% block title %}TemplateBundle:Dashboard:d_Jobs_Posted{% endblock %}

{% block container %}
<div class="col-sm-8 col-md-9">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Jobs Posted</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <table id="example1" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Job Title</th>
                        <th>Catégorie</th>
                        <th>Freelancer</th>
                        <th>Proposals</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                    <tr>
                        <td><a href="jobpost.html">{{ job.titre }}</a></td>
                        {% if job.categorie == 0 %}
                        <td><span class="label label-mint">Admin Support</span></td>
                        {% elseif job.categorie == 1 %}
                        <td><span class="label label-mint">Web,Software And IT</span></td>
                        {% elseif job.categorie == 2 %}
                        <td><span class="label label-mint">Desgin,Art And Multimédia</span></td>
                        {% elseif job.categorie == 3 %}
                        <td><span class="label label-mint">Managment And Finance</span></td>
                        {% elseif job.categorie == 4 %}
                        <td><span class="label label-mint">Writing And Translation</span></td>
                        {% elseif job.categorie == 5 %}
                        <td><span class="label label-mint">Engineering And Architecture</span></td>
                        {% elseif job.categorie == 6 %}
                        <td><span class="label label-mint">Legal</span></td>
                        {% elseif job.categorie == 7 %}
                        <td><span class="label label-mint">Others</span></td>
                        {% endif %}
                        <td>
                            {% if job.etat == 0 %}
                            <span class="label label-mint">NOT ASSIGNED</span>
                            {% elseif job.etat == 1 %}
                            <span class="label label-mint">DONE</span>
                            {% endif %}
                        </td>
                        <td><a href="workroom.html" class="kafe-btn kafe-btn-mint-small"> View Proposals</a></td>
                        <td><a href="{{ path('job_edit',{'id':job.id} )}}" class="btn btn-success btn-xs" data-toggle="tooltip" title="Edit"><span class="fa fa-edit"></span></a>
                            <a href="{{ path('job_delete',{'id':job.id} )}}" class="btn btn-danger btn-xs" data-toggle="tooltip" title="Delete"><span class="fa fa-trash"></span></a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Job Title</th>
                        <th>Catégorie</th>
                        <th>Freelancer</th>
                        <th>Proposals</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                </table>
            </div><!-- /.table-responsive -->
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</div>
    {% endblock %}
