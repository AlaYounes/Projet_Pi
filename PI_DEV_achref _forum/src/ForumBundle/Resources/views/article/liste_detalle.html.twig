{%  extends 'base.html.twig'  %}

{% block header %}
    {{ parent() }}
{% endblock %}
  {% block container %}
      {{ parent() }}

      <section class="profile-details">
          <div class="container">
              <div class="row">

                  <div class="col-lg-7 col-md-7 col-sm-6 col-xs-12">
                      <div class="card-box-profile-details">

                          <div class="description-profile">

                              <ul class="tr-list resume-info">
                                  {% for entity in liste %}
                                  <li>
                                      <div class="icon">
                                          <p class="tr-title"><i class="fa fa-black-tie" aria-hidden="true"></i> {{ entity.titre  }}</p>
                                          <p class="tr-title"> {{ entity.date|date("m/d/y") }}</p>

                                      </div>
                                      <div class="media-body">
                                                  <p>{{ entity.description  }}</p>
                                      </div>
                                  </li><!-- /.career-objective-->


                              </ul><!-- /.ul -->

                          </div><!-- /.description-profile -->

                      </div><!-- .card-box-profile-details -->
                      {% endfor %}

                      <div class="work">

                          <div class="col-lg-12">
                              <div class="icon">
                                  <p class="tr-title"><i class="fa fa-users" aria-hidden="true"></i> Applicants </p>
                              </div>
                          </div>

                          {% for entity in comments %}


                          <div class="job">

                              <div class="row bottom-sec">
                                  <div class="col-lg-12">

                                      <div class="col-lg-12">
                                          <hr class="small-hr">
                                      </div>

                                      <div class="col-lg-12">
                                          <div class="pull-left">
                                              <a href="freelancer.html">
                                                  <img class="img-responsive" src="assets/img/users/1.jpg" alt="Image">
                                              </a>
                                          </div><!-- /.col-lg-2 -->
                              {% for entity2 in users %}
                                  {% if entity2.id == entity.user.id %}
                                          <h5><a href="#">  {{ entity2.username }} </a> </h5>
                                          <p><i class="fa fa-map-marker"></i> {{ entity2.email }}</p>
                                  {% endif %}
                              {% endfor %}
                                          <div class="media-body">
                                              <p>  {{ entity.commentaire  }}        </p>
                                          </div>
                                          </p>
                                      </div>

                                  </div><!-- /.col-lg-12 -->
                              </div><!-- /.row -->

                              <div class="row mid-sec">
                                  <div class="col-lg-12">
                                      <div class="col-lg-12">
                                          <hr class="small-hr">
                                          <p></p>
                                          <span class="label label-success">skilles</span>

                                      </div><!-- /.col-lg-12 -->
                                  </div><!-- /.col-lg-12 -->
                              </div><!-- /.row -->

                          </div><!-- /.job -->
                              {% endfor %}
                          <!-- /.job -->

                          {% form_theme form 'bootstrap_3_layout.html.twig' %}
                          {{ form_start(form) }}
                          {{ form_widget(form) }}
                          <button type="submit" class="btn btn-success">add</button>



                          {{ form_end(form) }}
                      </div><!--/ .work -->


                  </div><!-- .col-lg-9 -->

                  <div class="col-lg-5 col-md-5 col-sm-8 col-xs-12">

                      <!-- .stats -->

                      <div class="stats">
                          <div class="row">
                              <h5>Activity</h5>
                              <div class="col-sm-4">
                                  <h6>3</h6>
                                  <p class="bottom">Proposals</p>
                              </div>
                              <div class="col-sm-4">
                                  <h6>0</h6>
                                  <p class="bottom">Interviewing</p>
                              </div>
                              <div class="col-sm-4">
                                  <h6>0</h6>
                                  <p class="bottom">Hired</p>
                              </div>
                              <p class="bottom"> Last viewed by client: <b> 3 days ago </b></p>
                          </div>
                      </div><!-- .stats -->





                  </div><!-- .col-lg-3 -->

              </div><!-- .row -->
          </div><!-- .container -->
      </section>


















    {% endblock %}