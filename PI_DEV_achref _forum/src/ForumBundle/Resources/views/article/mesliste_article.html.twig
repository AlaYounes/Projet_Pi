{%  extends 'base.html.twig'  %}
{% block header %}
    {{ parent() }}
{% endblock %}
  {% block container %}
      {{ parent() }}
      <body>



  <section class="dashboard section-padding">
      <div class="container">
          <div class="row">

              <div class="col-sm-4 col-md-3">



                  <ul class="sidebar-menu" data-widget="tree">
                      <li>
                          <a href="{{ path('listegenerral') }}">
                              <i class="fa fa-user"></i> <span>listegenerral</span>
                          </a>
                      </li>
                      <li>
                          <a href="{{ path('mes_article') }}">
                              <i class="fa fa-image"></i> <span>mes_question</span>
                          </a>
                      </li>
                      <li>
                          <a href="{{ path('add_article') }}">
                              <i class="fa fa-lock"></i> <span>add_question</span>
                          </a>
                      </li>
                  </ul>

              </div>

              <div class="col-sm-8 col-md-9">

                  <div class="box">
                      <div class="box-header">
                          <h3 class="box-title">Question List</h3>
                      </div><!-- /.box-header -->
                      <div class="box-body">
                          <div class="table-responsive">
                              <div class="row">



                              </div>

                              <table id="example1" class="table table-bordered table-hover">
                                  <thead>

                                  <tr>
                                      <th>question</th>
                                      <th>date post </th>

                                  </tr>
                                  </thead>
                                  <tbody>
                                  {% for entity in liste %}
                                              <tr>
                                                  <td>
                                                      <img src="{{ asset('img/logo.jpg') }}"
                                                           class="img-responsive img-circle pull-left" width="50" height="50"
                                                           alt="Image"/>
                                                      <a href="{{ path("new",{'id':entity.id ,'user_id':entity.user } )}}">{{ entity.titre  }}</a>
                                                  </td>
                                                  <td><span class="label label-mint">{{ entity.date|date("m/d/y") }}</span></td>
                                                  <td>
                                                      <a href="{{ path('update',{'id':entity.id}) }}" class="btn btn-success btn-xs" data-toggle="tooltip" title="Edit"><span
                                                                  class="fa fa-edit"></span></a>
                                                      <a href="{{ path('deletelist',{'id':entity.id}) }}" class="btn btn-danger btn-xs" data-toggle="tooltip"
                                                         title="Delete"><span class="fa fa-trash"></span></a>
                                                  </td>
                                              </tr>


                                  {% endfor %}
                                  </tbody>
                                  <div class="navigation">
                                      {{ knp_pagination_render(liste) }}
                                  </div>
                              </table>
                          </div>
                      </div><!-- /.box-body -->
                  </div><!-- /.box -->


              </div><!-- /.col-md-9 -->
          </div><!-- /.row -->
      </div>

  {% endblock %}