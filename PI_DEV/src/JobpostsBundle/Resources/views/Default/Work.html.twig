<section class="featured-users">
    <div class="container">
        <div class="section-title" style="padding-top: 20px;">
            <h1>Jobs</h1>
        </div>

        <div class="row">
            <div class="col-lg-9">
                <div class="work">
                    {% for annonce in listeannonce %}
                    <div class="job">

                        <div class="row top-sec">
                            <div class="col-lg-12">
                                <div class="col-lg-12 col-xs-12">
                                    <h4>{{ annonce.titre }}</h4>
                                    <h6>Hourly  {{ annonce.salaire }} $$</h6>
                                    <p><small>Posted few moments ago</small></p>
                                </div><!-- /.col-lg-10 -->

                            </div><!-- /.col-lg-12 -->
                        </div><!-- /.row -->

                        <div class="row mid-sec">
                            <div class="col-lg-12">
                                <div class="col-lg-12">
                                    <hr class="small-hr">
                                    <p>
                                        {{ annonce.description }}
                                    </p>
                                    <span class="label label-success">{{ annonce.speciality }}</span>
                                    <span class="label label-success">CSS3</span>
                                    <span class="label label-success">PHP 5.4</span>
                                    <span class="label label-success">Bootstrap</span>
                                </div><!-- /.col-lg-12 -->
                            </div><!-- /.col-lg-12 -->
                        </div><!-- /.row -->

                        <div class="row bottom-sec">
                            <div class="col-lg-12">

                                <div class="col-lg-12">
                                    <hr class="small-hr">
                                </div>

                                <div class="col-lg-6">
                                    <div class="pull-left">
                                        <a href="{{ path('template_Profile') }}">

                                            <img class="img-responsive" src="{{ asset('img/users/'~ annonce.id ~'.jpg') }}" alt="Image">
                                        </a>
                                    </div><!-- /.col-lg-2 -->
                                    <h5> Anna Morgan </h5>

                                </div>
                                <div class="col-lg-6">
                                    <div class="pull-right">



                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{annonce.id}}">
                                            Postuler dans ce travail
                                        </button>

                                        <!-- The Modal -->
                                        <center>
                                        <div class="modal fade" id="{{annonce.id}}">
                                            <div class="modal-dialog">
                                                <div class="modal-content">

                                                    <!-- Modal Header -->
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">x</button>
                                                        <h3>Titre:</h3>
                                                        <h4 class="modal-title">{{annonce.titre}}</h4>

                                                    </div>

                                                    <!-- Modal body -->
                                                    <h3>Description:</h3>
                                                    <div class="modal-body">
                                                        {{annonce.description}}
                                                        <br>
                                                        <label for="">Motivation (Pourquoi vous ? ) </label>
                                                        <br>
                                                        </div>
                                                    <form action="{{ path('Listeannonces') }}"  method="post">
                                                        <textarea name="motivation" rows="4" cols="50"></textarea>
                                                        <input name="ida" type="hidden" value="{{ annonce.id }}" />







                                                        <button type="submit" class="btn btn-success" >Valider</button>

                                                    </form>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                        </center>



                                    </div>
                                </div>

                            </div><!-- /.col-lg-12 -->
                        </div><!-- /.row -->

                    </div><!-- /.job -->
{% endfor %}

                    <div class="paginationCommon blogPagination text-center">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                <li>
                                    <a href="#" aria-label="Previous">
                                        <span aria-hidden="true"><i class="fa fa-angle-left" aria-hidden="true"></i></span>
                                    </a>
                                </li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li>
                                    <a href="#" aria-label="Next">
                                        <span aria-hidden="true"><i class="fa fa-angle-right" aria-hidden="true"></i></span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>

                </div><!-- ./work -->



            </div><!-- col-md-9 -->

            <div class="col-sm-4 col-md-3">

                <div class="widget">
                    <h3 class="widget_title">Category</h3>
                    <ul class="tr-list">
                        <li><a href="#" onclick="myFunction()" class="active"><i class="fa fa-code"></i> Mon agenda</a></li>
                    </ul>
                    <div class="margin-space"></div>
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="widget_title_small">Payment Type</h3>
                            <ul class="tr-list">
                                <li><a href="#" class="active">Any</a></li>
                                <li><a href="#">By Hour</a></li>
                                <li><a href="#">Fixed Cost</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-6">
                            <h3 class="widget_title_small">Experience Level</h3>
                            <ul class="tr-list">
                                <li><a href="#">Entry Level</a></li>
                                <li><a href="#">Intermediate</a></li>
                                <li><a href="#">Expert</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="margin-space"></div>
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="widget_title_small">Job Duration</h3>
                            <ul class="tr-list">
                                <li><a href="#">6+ Months</a></li>
                                <li><a href="#">3 - 6 Months</a></li>
                                <li><a href="#">1 - 3 Months</a></li>
                                <li><a href="#">Below 1 Month</a></li>
                                <li><a href="#">Below 1 Week</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-6">
                            <h3 class="widget_title_small">Hours Per Week</h3>
                            <ul class="tr-list">
                                <li><a href="#">30 - 39</a></li>
                                <li><a href="#">20 - 29</a></li>
                                <li><a href="#">10 - 19</a></li>
                                <li><a href="#">1 - 9</a></li>
                            </ul>
                        </div>
                    </div>

                </div><!-- /.widget -->

            </div>
        </div>

    </div>
</section>
